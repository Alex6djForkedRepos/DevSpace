<RadzenButton id="buttonBookmarks" Disabled="true" @ref="@BookmarksButton" Icon="bookmark" IconColor="var(--rz-header-color)" class="rz-button-icon-only" Click="@(() => BoomarksPopup.ToggleAsync(BookmarksButton.Element))" ButtonStyle="ButtonStyle.Base" Variant="Variant.Text">
</RadzenButton>

<Popup @ref="@BoomarksPopup" class="rz-popup popup-bookmarks" Lazy="true" AutoFocusFirstElement="false">
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween">
        <RadzenText TextStyle="TextStyle.Body1" Style="color: var(--rz-text-tertiary-color); font-weight: 600; margin-top: 8px; margin-left: 4px; margin-bottom: 2px;">Bookmarks</RadzenText>
    </RadzenStack>
</Popup>

<style>
    .popup-bookmarks {
        width: 300px;
        margin-top: 2px;
        left: calc(100vw - 310px) !important;
        height: 364px;
    }

    @@media (max-width: 768px) {
        .popup-bookmarks {
            left: 10px !important;
        }
    }
</style>

@code {
    [CascadingParameter]
    private SessionProvider Session { get; set; }

    public Popup BoomarksPopup { get; set; }
    public RadzenButton BookmarksButton { get; set; }
}
