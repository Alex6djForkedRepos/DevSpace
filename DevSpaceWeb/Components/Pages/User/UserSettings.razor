@page "/user/settings"
@using System.Net.Http
@using DevSpaceWeb.Components.Dialogs
@using DevSpaceWeb.Fido2
@using DevSpaceWeb.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Caching.Distributed
@using System.Text.Json
@using MongoDB.Bson
@using System.Globalization
@implements IDisposable
@inject IJSRuntime JS
@inject IDistributedCache Cache
@inject UserManager<AuthUser> UserManager
@inject EmailService Email
@inject NavigationManager NavigationManager
@inject Fido2Service Fido2Service
@inject IDialogService DialogService
@inject IDistributedCache Cache

<div class="dash-box dash-box-content">
    <div class="dash-box-header">
        <div class="dash-box-icon"><span class="iconify" data-icon="mdi:gear"></span></div>
        <MudText Typo="Typo.h6">Settings</MudText>
    </div>
    <MudTabs Outlined="false" KeepPanelsAlive="true" SliderColor="Color.Info" Position="Position.Left" Rounded="true" Border="false" Elevation="0"
             ApplyEffectsToContainer="true" Class="mt-8" PanelClass="pa-2">
        <MudTabPanel Text="Profile">
            <div class="settings-box">
                <h3>My Account</h3>
                <br />
                @if (AuthUser == null)
                {
                    <MudSkeleton />
                    <MudSkeleton />
                    <MudSkeleton Width="120px" Height="50px" />
                }
                else
                {
                    <MudTextField Value="@AuthUser.UserName" Label="Username" Variant="Variant.Text" Underline="false" ReadOnly></MudTextField>
                    <p>Account Created: @GetLocalDate(AuthUser.CreatedOn, false)</p>

                    <MudTextField Value="@AuthUser.Email" Label="Email" Variant="Variant.Text" Underline="false" ReadOnly></MudTextField>
                    @if (!AuthUser.EmailConfirmed)
                    {
                        if (EmailVerifySent)
                        {
                            <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="ml-4 mr-4">
                                <p class="mb-2">Check your email address to confirm your account.</p>
                                <MudButton Variant="Variant.Filled" Color="Color.Dark" Disabled="true" Size="Size.Small">Verify Email</MudButton>
                            </MudAlert>
                        }
                        else
                        {
                            <MudAlert Severity="Severity.Warning" Variant="Variant.Filled" Class="ml-4 mr-4">
                                <p class="mb-2">You need to confirm your email address.</p>
                                <MudButton Variant="Variant.Filled" Color="Color.Dark" OnClick="SendEmailVerify" Size="Size.Small">Verify Email</MudButton>
                            </MudAlert>
                        }
                    }
                    <br />
                    <h4 class="mb-2">Change</h4>
                    <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="ChangeUsername">Username</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="ChangeEmail">Email</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="ChangePassword">Password</MudButton>
                    <br />
                    <br />
                    <br />
                    <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="DeleteAccount">Delete Account</MudButton>
                }
            </div>
        </MudTabPanel>
        <MudTabPanel Text="Two-factor (2FA)">
            @if (AuthUser != null)
            {
                if (!AuthUser.EmailConfirmed)
                {
                    <div class="settings-box">
                        <h3>Account not Verified</h3>
                        <br />
                        <p>You need to confirm your email address to enable Two-factor authentication.</p>
                    </div>
                }
                else
                {
                    <div class="settings-box">
                        <h3>Email Codes</h3>
                        <br />
                        <p>Last Sent: @(GetLocalDate(AuthUser.Auth.EmailCodeLastSentAt, false))</p>
                        <p>Last Used: @(GetLocalDate(AuthUser.Auth.EmailCodeLastUsedAt, false))</p>
                    </div>
                    <div class="settings-box">
                        <h3>Authenticator App</h3>
                        <br />
                        <p>Last Registered: @(GetLocalDate(AuthUser.Auth.AuthenticatorLastRegisteredAt, false))</p>
                        <p>Last Used: @(GetLocalDate(AuthUser.Auth.AuthenticatorLastUsedAt, false))</p>
                        <br />
                        <h3 class="mb-2">Devices</h3>
                        @foreach (var i in AuthUser.Auth.AuthenticatorDevices)
                        {
                            <div class="passkey-item" style="height: 40px;">
                                <p style="margin-right: 6px;">
                                    @i.Key
                                </p>
                                @if (i.Value)
                                {
                                    <MudChip T="string" Style="margin-top: -26px;" Variant="Variant.Text" Color="Color.Success">Registered</MudChip>
                                }
                                else
                                {
                                    <MudChip T="string" Style="margin-top: -26px;" Variant="Variant.Text" Color="Color.Warning">Unregistered</MudChip>
                                }
                            </div>

                        }
                        <br />
                        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small" OnClick="RegisterAuthenticator">Register</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" OnClick="@(() => Session.TriggerTwoFactorAuthentication(AuthUser, true))">Test</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="@(() => Session.TriggerTwoFactorAuthentication(AuthUser, true))">Remove All</MudButton>
                    </div>
                    <div class="settings-box">
                        <h3>Passkeys (Webauth)</h3>
                        <br />
                        <p>Last Registered: @(GetLocalDate(AuthUser.Auth.PasskeyLastRegisteredAt, false))</p>
                        <p>Last Used: @(GetLocalDate(AuthUser.Auth.PasskeyLastUsedAt, false))</p>
                        <p class="mb-2">Last Device: @AuthUser.Auth.PasskeyLastUsedDevice</p>
                        <div>

                            @foreach (var i in AuthUser.Auth.Passkeys)
                            {
                                <div class="passkey-item">
                                    <img src="data:image/svg+xml;base64," />
                                    <h4>@i.Name</h4>
                                    <p>Created: @(GetLocalDate(i.CreatedAt, false))</p>
                                    <p>Last Used: @(GetLocalDate(i.LastUsedAt, false))</p>
                                    <div @onclick="@(() => RemovePasskey(i))" style="cursor: pointer;">
                                        <span class="iconify" data-icon="mdi:delete"></span>
                                    </div>
                                </div>
                            }

                        </div>
                        <br />
                        <MudTextField @bind-Value="PasskeyName" ShrinkLabel="true" Label="Passkey Name" Variant="Variant.Filled" Underline="false"></MudTextField>
                        <br />
                        <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small" OnClick="RegisterPasskey">Register</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" OnClick="(() => TestPasskey())">Test</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="RemoveAllPasskeys">Remove All</MudButton>
                    </div>
                    <div class="settings-box">
                        <h3 class="mb-2">Backup Code</h3>
                        <p>Use this code to get back into your account if you lose access.</p>
                        <br />
                        @if (AuthUser.Auth.IsTwoFactorEnabled)
                        {
                            @if (string.IsNullOrEmpty(AuthUser.Auth.RecoveryCode))
                            {
                                <MudAlert Severity="Severity.Warning">You have not created a recovery code!</MudAlert>
                                <br />
                                <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small" OnClick="GenerateBackupCodes">Generate</MudButton>
                            }
                            else
                            {
                                <MudAlert Class="mb-2" Severity="Severity.Info">Backup codes were generated @(GetLocalDate(AuthUser.Auth.RecoveryCodeCreatedAt, false))</MudAlert>
                                <p>Last Used: @(GetLocalDate(AuthUser.Auth.RecoveryCodeLastUsedAt, false))</p>
                                <br />
                                <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="GenerateBackupCodes">Reset</MudButton>
                            }
                        }
                        else
                        {
                            <MudAlert Severity="Severity.Normal">You need to setup 2FA Authenticator or Passkey to generate a backup code.</MudAlert>
                            <br />
                            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" Disabled="true">Generate</MudButton>
                        }
                    </div>
                }
            }
        </MudTabPanel>
    </MudTabs>

</div>

