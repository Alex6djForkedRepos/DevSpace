@using DevSpaceWeb.Models.Setup
@using System.Net
@using Newtonsoft.Json
@inject DialogService DialogService

<PageTitle>My Servers | @_Data.Config.Instance.Name</PageTitle>

<div class="dash-box dash-box-content">
    <div class="dash-box-header">
        <div class="dash-box-icon"><span class="iconify" data-icon="mdi:account"></span></div>
        <RadzenText TextStyle="TextStyle.H6">Servers</RadzenText>
    </div>
    <br />

    <RadzenButton ButtonStyle="ButtonStyle.Success" Shade="Shade.Dark" Text="Setup Server" Click="@SetupServer" Disabled="(!Member.HasServerPermission(Team, null, ServerPermission.CreateServerResource))" />
    <br />
    <br />
    @foreach (ServerData i in _DB.Servers.Cache.Values.Where(x => Member.HasServerPermission(Team, x, ServerPermission.ViewServer)).OrderBy(x => x.Name))
    {
        <a href="@("/teams/" + Session.Selected.Team.VanityUrl + "/servers/" + i.GetVanityUrlOrId())">
                <div class="server-item d-flex flex-grow-1 gap-2" style="display: flex; vertical-align: middle;">
                    <div class="server-item-icon flex-none d-flex">
                        <span class="iconify" data-icon="mdi:server"></span>
                    </div>
                    <div>
                    <RadzenText TextStyle="TextStyle.H6" class="mt-5 ml-2">@i.Name</RadzenText>
                    <RadzenStack Orientation="Orientation.Horizontal">
                        <RadzenText class="ml-2" Style="@("color: var(" + (i.IsConnected ? "--rz-success" : "--rz-danger") + ");")" TextStyle="TextStyle.Body2">@(i.IsConnected ? "Online" : "Down")</RadzenText>
                        @if (i.GetWebSocket() != null && i.GetWebSocket().Discover != null)
                        {
                            <RadzenText TextStyle="TextStyle.Body2">@("v" + i.GetWebSocket().Discover.Version)</RadzenText>
                        }
                        @if (i.WebSocketError.HasValue)
                        {
                            <RadzenText TextStyle="TextStyle.Body2">@Utils.FriendlyName(i.WebSocketError.Value.ToString())</RadzenText>
                        }
                    </RadzenStack>
                    </div>
                    
                </div>
            </a>
        
        <br />
    }

</div>

