                                </div>
                            </RadzenTabsItem>
                            <RadzenTabsItem Text="Permissions">
                                @if (Member.HasTeamPermission(Team, TeamPermission.ViewPermissions))
                                {
                                    @if (Team != null && Team.OwnerId != Member.UserId && SelectedRole.GetPosition() >= CurrentRank)
