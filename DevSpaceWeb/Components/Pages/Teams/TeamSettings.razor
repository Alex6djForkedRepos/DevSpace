@using DevSpaceWeb.Components.Dialogs
@using DevSpaceWeb.Models
@using DevSpaceWeb.Models.Teams
@using Microsoft.AspNetCore.Components.Forms


<div class="dash-box dash-box-content">
    <div class="dash-box-header">
        <div class="dash-box-icon"><span class="iconify" data-icon="mdi:gear"></span></div>
        <RadzenText class="mt-1" TextStyle="TextStyle.H6">@Team.Name Settings</RadzenText>
    </div>
    <br />
    <a href="@("/teams/" + Session.Selected.Team.VanityUrl + "/settings/basic")">Basic</a>
    <a href="@("/teams/" + Session.Selected.Team.VanityUrl + "/settings/members")">Members</a>
    <a href="@("/teams/" + Session.Selected.Team.VanityUrl + "/settings/roles")">Roles</a>
    <a href="@("/teams/" + Session.Selected.Team.VanityUrl + "/settings/permissions")">Permissions</a>
</div>

@code {
    [CascadingParameter]
    private SessionProvider Session { get; set; }

    public TeamData Team => Session.Selected.Team.Data;

    public TeamMemberData Member => Session.Selected.Member;
}
