<RadzenStack class="actionbar" Gap="4px;" Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap">
    @ChildContent
</RadzenStack>

<style>
    .actionbar .rz-button:not(.rz-variant-text) {
        height: 30px;
    }

    .actionbar .rz-textbox {
        height: 28px !important;
    }

    .actionbar .rz-button.rz-variant-outlined.rz-base:not(.actionbar-last):not(.actionbar-single) {
        margin-right: -4px !important;
    }

    .actionbar .rz-button.rz-variant-outlined.rz-base {
        border-radius: 0px;
        box-shadow: inset 0 0 0 var(--rz-border-width) rgb(150,150,150) !important;
    }

    .actionbar-first {
        border-radius: var(--rz-button-border-radius) 0 0 var(--rz-button-border-radius) !important;
    }

    .actionbar-last {
        border-radius: 0 var(--rz-button-border-radius) var(--rz-button-border-radius) 0 !important;
        margin-right: 4px !important;
    }

    .actionbar-single {
        border-radius: var(--rz-button-border-radius) !important;
        margin-right: 4px !important;
    }
</style>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
