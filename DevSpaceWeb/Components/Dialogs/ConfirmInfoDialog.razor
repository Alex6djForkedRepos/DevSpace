@inject Radzen.DialogService dialogService

<PageTitle>Confirmation | @_Data.Config.Instance.Name</PageTitle>

<RadzenStack Gap="0.5rem" Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween" Style="height: 100%;">
    <RadzenStack>
        <RadzenText TextStyle="TextStyle.Body2">
            @ContentText
        </RadzenText>
    </RadzenStack>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem">
        @if (ShowCancel)
        {
            <RadzenButton Click="@((args) => dialogService.Close(false))" Variant="Variant.Text" ButtonStyle="ButtonStyle.Base" Text="Cancel" Style="width: 90px" />
        }
        <RadzenButton Click="@Submit" ButtonStyle="@Color" Variant="Variant.Text" Text="@ButtonText" Style="min-width: 90px" />
    </RadzenStack>
</RadzenStack>


@code {
    [Parameter, EditorRequired] public string ContentText { get; set; }

    [Parameter, EditorRequired] public string ButtonText { get; set; }

    [Parameter] public ButtonStyle Color { get; set; }

    [Parameter] public bool ShowCancel { get; set; } = true;

    void Submit() => dialogService.Close(true);
}
